{
  "name": "y",
  "version": "0.0.1",
  "description": "Parser for the Mojom IDL",
  "main": "lib/index.js",
  "watch": {
    "test": {
      "patterns": [
        "**/*.{ts,ne,mojom}"
      ],
      "ignore": "grammar.ts",
      "extensions": "ts,ne,mojom"
    }
  },
  "scripts": {
    "test": "npm run compile && ts-node test/index.ts",
    "watch:test": "npm-watch test"
    "grammar:compile": "nearleyc src/grammar.ne -o src/grammar.ts",
    "build": "npm run clean && npm run grammar:compile && npm run ts:build",
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "nearley": "^2.15.1"
  },
  "devDependencies": {
    "@types/nearley": "^2.11.0",
    "@types/node": "^10.12.10",
    "npm-watch": "^0.4.0",
    "rimraf": "^2.6.2",
    "treeify": "^1.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
